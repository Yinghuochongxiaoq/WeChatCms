@{
    ViewBag.Title = "内容编辑";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input type="hidden" id="id" value="@ViewBag.Id" />
<div class="widget widget-body">
    <div class="panel panel-default" id="detailWindow">
        <p class="form-inline margin-10">
            内容来源：
            <input id="contentSource" autocomplete="off" type="text" v-model="content_model.ContentSource" name="contentSource" placeholder="输入内容来源" style="min-width: 150px; width: 80%;" class="form-control input-sm" />
        </p>
        <p class="form-inline margin-10">
            内容标题：
            <input id="shareTheme" autocomplete="off" type="text" v-model="content_model.Title" name="contentTitle" placeholder="输入内容标题" style="min-width: 150px; width: 80%;" class="form-control input-sm" />
        </p>
        <p class="form-inline margin-10">
            内容类型：
            <select class="form-control input-sm" style="min-width: 150px; width: 80%;"
                    name="ContentType" v-model="content_model.ContentType">
                <option v-for="item in all_type_list" v-bind:value="item.Id">
                    {{item.Lable}}
                </option>
            </select>
        </p>
        <p class="form-inline margin-10">
            <script id="shareContent" name="shareContent" type="text/plain" style="width: 100%; height: 300px;">
            </script>
        </p>
        <input class="btn btn-success mr-20 mt-20 mb-20" type="button" onclick=" addContentInfo(); " value="提交内容" />
    </div>
</div>

@section Script
{
    <script src="@(ViewBag.RootNode)/Assets/js/jquery-ui-1.10.4.custom.js"></script>
    <script src="@(ViewBag.RootNode)/Assets/js/My97DatePicker/WdatePicker.js"></script>
    <!--UEditor编辑器-->
    <script type="text/javascript" charset="utf-8" src="@(ViewBag.RootNode)/UEditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="@(ViewBag.RootNode)/UEditor/ueditor.all.min.js"></script>
    <script src="@(ViewBag.RootNode)/Content/Scripts/Content/contentedit.js"></script>
}

